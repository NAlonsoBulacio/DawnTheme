<style>
  .video-section {
    background-color: #d9e2ff; /* Fondo azul claro */
    padding: 40px 20px;
    text-align: center;
  }

  .video-header {
    text-align: center;
    margin-bottom: 20px;
  }

  .video-header-title {
    display: inline-block;
    padding: 10px 20px;
    background-color: #018FE1;
    color: white;
    border-radius: 10px;
    font-size: 16px;
    font-weight: bold;
    margin: 0;
  }
  .video-header-subtitle {
    font-size: 36px;
    font-weight: bold;
    color: #333;
    margin: 5px 0;
  }

  .video-content {
    display: flex;
    flex-direction: column; /* Cambiar a columna */
    align-items: center;
    justify-content: center;
    gap: 20px;
  }

  .video-text {
   
    border-radius: 10px;
    color: #018FE1;
    max-width: 100%; /* Ocupa el ancho completo */
  }

  .video-text-title {
    font-size: 24px;
    font-weight: semibold;
    margin: 0;
     text-wrap: balance;
  }

  .video-wrapper {
    max-width: 100%; /* Ocupa el ancho completo */
    position: relative;
  }

  .video-wrapper a {
    display: block;
    width: 100%;
    height: 100%;
  }

  .video-element {
    width: 60%;
    height: 100%;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .video-content {
      flex-direction: column; /* Mantener la dirección en columna */
    }

    .video-header-subtitle {
      font-size: 28px;
    }

    .video-text-title {
      font-size: 20px;
    }
  }
</style>

